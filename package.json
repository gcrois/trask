{
	"name": "trask",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"packageManager": "pnpm@9.1.3",
	"exports": {
		".": "./src/index.ts"
	},
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0; stylelint '**/*.{css,scss}'",
		"lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix; stylelint '**/*.{css,scss}' --fix",
		"style": "prettier --write . && stylelint '**/*.{css,scss}' && npm run lint",
		"preview": "vite preview",
		"type": "cd proto && protoc -I . --python_betterproto_opt=pydantic_dataclasses --python_betterproto_out=./py --plugin=../node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=./ts -I ../backend tasks.proto",
		"test": "vitest"
	},
	"dependencies": {
		"@emotion/react": "^11.11.4",
		"@types/uuid": "^10.0.0",
		"protobufjs": "^7.3.2",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-spaces": "^0.5.0",
		"ts-proto": "^1.181.0",
		"uuid": "^10.0.0",
		"vitest": "^2.0.5"
	},
	"devDependencies": {
		"@types/node": "^20.14.9",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@typescript-eslint/eslint-plugin": "^7.13.1",
		"@typescript-eslint/parser": "^7.13.1",
		"@vitejs/plugin-react": "^4.3.1",
		"eslint": "^8.57.0",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-react-refresh": "^0.4.7",
		"postcss-scss": "^4.0.9",
		"prettier": "3.3.2",
		"sass": "^1.77.6",
		"stylelint": "^16.6.1",
		"stylelint-config-standard": "^36.0.1",
		"stylelint-config-standard-scss": "^13.1.0",
		"typescript": "^5.2.2",
		"vite": "^5.3.1",
		"vite-plugin-stylelint": "^5.3.1"
	}
}
